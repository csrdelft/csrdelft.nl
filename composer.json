{
	"name": "csr/csrdelft.nl",
	"description": "De stek van C.S.R. Delft",
	"authors": [
		{
			"name": "PubCie",
			"email": "pubcie@csrdelft.nl"
		}
	],
	"require": {
		"csrdelft/bb": "1.3.5",
		"easyrdf/easyrdf": "^0.9.1",
		"ext-PDO": "*",
		"ext-curl": "*",
		"ext-dom": "*",
		"ext-exif": "*",
		"ext-gd": "*",
		"ext-hash": "*",
		"ext-iconv": "*",
		"ext-intl": "*",
		"ext-json": "*",
		"ext-libxml": "*",
		"ext-mysqli": "*",
		"ext-openssl": "*",
		"ext-pdo_mysql": "*",
		"ext-simplexml": "*",
		"firebase/php-jwt": "^6.0",
		"globalcitizen/php-iban": "^2.6",
		"google/apiclient": "^2.0",
		"maknz/slack": "^1.7",
		"symfony/config": "^5.0",
		"symfony/dotenv": "^5.0",
		"symfony/flex": "^1.4",
		"symfony/framework-bundle": "^5.0",
		"symfony/http-foundation": "^5.0",
		"symfony/routing": "^5.0",
		"symfony/security-csrf": "^5.0",
		"symfony/templating": "^5.0",
		"symfony/twig-bundle": "^5.0",
		"symfony/monolog-bundle": "^3.5",
		"symfony/cache": "^5.0",
		"beberlei/doctrineextensions": "^1.2",
		"symfony/var-dumper": "^5.0",
		"zumba/json-serializer": "^3.0",
		"sensio/framework-extra-bundle": "^5.5",
		"parsecsv/php-parsecsv": "^1.2",
		"symfony/mime": "^5.0",
		"symfony/security-bundle": "^5.0",
		"symfony/yaml": "^5.0",
		"sentry/sentry-symfony": "^4.5",
		"symfony/form": "^5.0",
		"symfony/translation": "^5.0",
		"twig/intl-extra": "^3.2",
		"twig/extra-bundle": "^3.2",
		"twig/cssinliner-extra": "^3.3",
		"symfony/uid": "^5.0",
		"endroid/qr-code": "^4.1",
		"nelmio/cors-bundle": "^2.1",
		"tecnickcom/tcpdf": "^6.4",
		"clegginabox/pdf-merger": "dev-master",
		"ext-zip": "*",
		"composer/package-versions-deprecated": "1.11.99.1",
		"doctrine/doctrine-bundle": "^2.3",
		"doctrine/doctrine-migrations-bundle": "^3.1",
		"doctrine/orm": "^2.8",
		"symfony/proxy-manager-bridge": "^5.0",
		"doctrine/annotations": "^1.0",
		"phpdocumentor/reflection-docblock": "^5.2",
		"symfony/property-access": "^5.0",
		"symfony/property-info": "^5.0",
		"symfony/serializer": "^5.0",
		"league/oauth2-server-bundle": "^0.4.1"
	},
	"config": {
		"platform": {
			"php": "7.3.14"
		},
		"allow-plugins": {
			"symfony/flex": true
		}
	},
	"autoload": {
		"psr-4": {
			"CsrDelft\\": "lib/",
			"CsrDelft\\tests\\": "tests/lib/"
		}
	},
	"include-path": [
		"lib/"
	],
	"require-dev": {
		"doctrine/doctrine-fixtures-bundle": "^3.3",
		"symfony/maker-bundle": "^1.19",
		"fzaninotto/faker": "^1.9",
		"symfony/phpunit-bridge": "^5.1",
		"phpunit/phpunit": "8.5.32",
		"spatie/phpunit-snapshot-assertions": "^3.0",
		"symfony/browser-kit": "^5.0",
		"symfony/css-selector": "^5.0",
		"symfony/panther": "^0.8.0",
		"vimeo/psalm": "^4.7",
		"weirdan/doctrine-psalm-plugin": "^1.0",
		"psalm/plugin-symfony": "^2.2",
		"symfony/stopwatch": "^5.4",
		"symfony/web-profiler-bundle": "^5.4"
	},
	"scripts": {
		"serve": [
			"Composer\\Config::disableProcessTimeout",
			"symfony serve --document-root htdocs"
		],
		"migrate": "@console doctrine:migrations:migrate --allow-no-migration --no-interaction",
		"generator": "@php bin/dev/generate.php",
		"flushcache": "@console stek:cache:flush",
		"analyze": "@php vendor/vimeo/psalm/psalm",
		"test": "@php vendor/phpunit/phpunit/phpunit --bootstrap ./phpunit.init.php tests",
		"console": "@php bin/console",
		"update-prod": [
			"@php -r \"exit(exec('git rev-parse --abbrev-ref HEAD') == 'master' ? 'Branch is master' . PHP_EOL : 1);\"",
			"git fetch",
			"touch .onderhoud",
			"git merge FETCH_HEAD",
			"rm -r ./var/cache",
			"@composer dump-env prod",
			"@flushcache",
			"@migrate",
			"rm .onderhoud",
			"@console cache:warmup"
		],
		"startup": [
			"Composer\\Config::disableProcessTimeout",
			"@composer install",
			"@migrate"
		],
		"update-dev": [
			"@composer install",
			"@migrate",
			"yarn",
			"yarn dev"
		],
		"auto-scripts": {
			"cache:clear": "symfony-cmd",
			"assets:install %PUBLIC_DIR%": "symfony-cmd"
		}
	}
}
