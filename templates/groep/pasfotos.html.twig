{% extends 'groep/tab.html.twig' %}

{% block type %}pasfotos{% endblock %}

{% block tabcontent %}
	{% if is_granted('groep.aanmelden', groep) %}
		{{ aanmeldForm | raw }}
	{% endif %}

	{% for lid in groep.leden %}
		<img class="pasfoto" loading="lazy" src="{{ lid.profiel.pasfoto }}" alt="Pasfoto van {{ lid.profiel.naam('volledig') }}">
	{% endfor %}
{% endblock %}
